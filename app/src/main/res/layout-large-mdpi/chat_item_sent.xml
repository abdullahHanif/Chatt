<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llaa"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pad_15dp"
        android:layout_marginRight="@dimen/pad_15dp">

        <ImageView
            android:id="@+id/imgSender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/pad_chat_item1"
            android:src="@drawable/user_chat2" />

        <LinearLayout
            android:id="@id/v1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/imgSender"
            android:background="@drawable/chat_bubble_green"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingBottom="@dimen/pad_5dp"
            android:paddingLeft="@dimen/pad_chat_item"
            android:paddingTop="@dimen/pad_5dp"
            android:layout_toLeftOf="@+id/imgSender"
            android:layout_toStartOf="@+id/imgSender">

            <TextView
                android:id="@+id/lbldate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_13sp" />

            <TextView
                android:id="@+id/lblmessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="4"
                android:text="textvdv"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_14sp" />
            <ImageView
                android:id="@+id/lblSentImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_14sp" />


        </LinearLayout>

        <TextView
            android:id="@+id/lblstatusmsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/v1"
            android:layout_below="@id/v1"
            android:layout_marginTop="@dimen/pad_5dp"
            android:text="textvdv"
            android:textColor="@color/main_color_gray"
            android:textSize="@dimen/txt_14sp" />
    </RelativeLayout>
</LinearLayout>